<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.reswipe.reswipe.activities.activities.SearchResultsActivity"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/dislikeButton"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:onClick="subscribeDislikes"
        android:text="@string/add_to_list_2"
        app:layout_constraintRight_toLeftOf="@+id/tocookButton"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tocookButton" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="88dp"
        android:layout_height="44dp"
        android:onClick="subscribeLikes"
        android:text="@string/add_to_list_1"
        app:layout_constraintLeft_toRightOf="@+id/tocookButton"
        android:layout_marginLeft="7dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tocookButton" />

    <Button
        android:id="@+id/tocookButton"
        android:layout_width="83dp"
        android:layout_height="44dp"
        android:onClick="subscribeToCook"
        android:text="@string/add_to_list_3.1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="361dp"
        android:layout_height="396dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tocookButton"></ListView>

</android.support.constraint.ConstraintLayout>